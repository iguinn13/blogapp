<%- include('../../partials/head.ejs') %>
<%- include('../../partials/admin/navbar.ejs') %>
<div class="container">
    <div class="card mt-3 mb-5">
        <div class="card-header bg-primary text-light">
            <h1>Novo artigo</h1>
        </div>
        <div class="card-body bg-dark">
            <form action="/admin/artigos/cadastrarArtigo" method="POST" class="p-4 bg-dark rounded">
                <label for="titulo" class="text-white">Titulo</label>
                <input type="text" name="titulo" class="form-control" required>
                <label for="categoria" class="text-light mt-3">Categoria</label>
                <select name="categoria" class="form-control">
                    <% categorias.forEach(categoria => { %>
                        <option value="<%= categoria.id %>"><%= categoria.titulo %></option>
                    <% }) %>
                </select>
                <label for="corpo" class="text-light mt-3">Conteudo</label>
                <textarea class="form-control" id="artigo" name="corpo" rows="20"></textarea>
                <button type="submit" class="btn btn-primary mt-4 form-control">Criar</button>
            </form>
        </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#artigo",
        plugins: [
            'advlist autolink link image lists prin preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    });
</script>