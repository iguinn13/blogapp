<%- include('../../partials/head.ejs') %>
<%- include('../../partials/admin/navbar.ejs') %>
<div class="container">
    <div class="card mt-3 mb-5">
        <div class="card-header bg-warning text-dark">
            <h1>Editar artigo</h1>
        </div>
        <div class="card-body bg-dark text-light">
            <form action="/admin/artigos/confirmarEdicao" method="POST" class="p-4">
                <input type="hidden" value="<%= artigo.id %>" name="id">
                <label for="titulo">Titulo</label>
                <input type="text" name="titulo" value="<%= artigo.titulo %>" class="form-control">
                <label for="categoria" class="mt-3">Categoria</label>
                <select class="form-control" name="categoria">
                    <% categorias.forEach(categoria => { %>
                        <% if(categoria.id == artigo.categoriaId){ %>
                            <option value="<%= categoria.id %>" selected><%= categoria.titulo %></option>
                        <% } else { %>
                            <option value="<%= categoria.id %>"><%= categoria.titulo %></option>
                        <% } %>
                    <% }) %>
                </select>
                <label for="corpo" class="mt-3">Conteudo</label>
                <textarea id="artigo" name="corpo" class="form-control" rows="20"><%= artigo.corpo %></textarea>
                <button type="submit" class="btn btn-warning form-control mt-4">Editar</button>
            </form>
        </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#artigo",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    });
</script>